{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["server.ts", "lib/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
